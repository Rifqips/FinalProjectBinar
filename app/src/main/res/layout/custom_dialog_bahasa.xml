<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:padding="10dp"
    android:outlineAmbientShadowColor="@color/warna_button"
    android:outlineSpotShadowColor="@color/warna_button"
    app:cardCornerRadius="10dp"
    android:layout_height="150dp"
    tools:ignore="UnusedAttribute">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintCircleRadius="10dp"
        android:outlineAmbientShadowColor="@color/warna_button"
        android:outlineSpotShadowColor="@color/warna_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/tvInputCustomDialogDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_ganti_bahasa"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnConfYes"
            style="@style/secondbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:text="@string/string_iya"
            android:textColor="@color/warna_button"
            android:backgroundTint="@color/warna_background"/>

        <Button
            android:id="@+id/btnConfNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:text="@string/string_tidak"
            android:layout_marginTop="20dp"
            android:textColor="@color/warna_button"
            style="@style/secondbutton"
            android:backgroundTint="@color/warna_background"
            />
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>