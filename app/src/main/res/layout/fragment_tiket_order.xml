<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna_background"
    android:padding="10dp"
    tools:context=".view.fragments.detail.TiketOrderFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvArraowDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_bg_second"
        android:outlineAmbientShadowColor="@color/warna_button"
        android:outlineSpotShadowColor="@color/warna_button"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackDetail"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Status Booking"
        android:textAlignment="center"
        android:textColor="@color/warna_primary_font"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toEndOf="@+id/cvArraowDetail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Asal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/poppins_medium"
        android:text="JKT"
        android:textAlignment="center"
        android:textColor="@color/warna_primary_font"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="66dp"
        android:layout_marginTop="64dp"
        android:outlineSpotShadowColor="@color/white"
        android:src="@drawable/ic_baseline_linear_scale_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/Tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="198dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/poppins_medium"
        android:text="USA"
        android:textAlignment="center"
        android:textColor="@color/warna_primary_font"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="9dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/NoPenerbangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="No Penerbangan"
                android:textAlignment="center"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Class"
                android:textAlignment="center"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Terminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/Class"
                android:fontFamily="@font/poppins_medium"
                android:text="Terminal"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CodeTerminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/Terminal"
                android:layout_marginTop="20dp"
                android:layout_alignStart="@id/Terminal"
                android:fontFamily="@font/poppins_medium"
                android:text="66b"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/JenisClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/Class"
                android:layout_marginTop="20dp"
                android:layout_alignStart="@id/Class"
                android:fontFamily="@font/poppins_medium"
                android:text="Ekonomi"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CodePenerbangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/NoPenerbangan"
                android:layout_alignTop="@id/NoPenerbangan"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="CX 138"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CodePenerbangan"
                android:layout_margin="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tanggal"
                android:textAlignment="center"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tanggal"
                android:layout_alignTop="@id/tanggal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text= "12 Februari 2020"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JenisClass"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Pukul"
                android:textAlignment="center"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Waktuberangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/Jam"
                android:layout_alignTop="@id/Jam"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text= "08:00 PM"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Kursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CodeTerminal"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/Class"
                android:fontFamily="@font/poppins_medium"
                android:text="Terminal"
                android:textColor="@color/warna_button"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NoKursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/Kursi"
                android:layout_alignTop="@id/Kursi"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text= "12A"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@id/tanggal"
                android:layout_margin="20dp"
                android:background= "@color/warna_secondary_font" />

            <TextView
                android:id="@+id/TextNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Penumpang"
                android:textColor="@color/warna_button"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line2"
                android:layout_width="100dp"
                android:layout_height="1dip"
                android:layout_below="@id/TextNama"
                android:layout_marginLeft="20dp"
                android:background= "@color/black" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_pic_empty"/>

            <TextView
                android:id="@+id/namapenumpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rifqi Padi Siliwangi"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/namapenumpang"
                android:fontFamily="@font/poppins_medium"
                android:text="Male, 20 Tahun"
                android:textColor="@color/warna_secondary_font"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/img"
                android:src="@drawable/qr"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>