<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgOrder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/jakarta" />

        <TextView
            android:id="@+id/txtKotaOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imgOrder"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHargaOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            app:layout_constraintStart_toStartOf="@+id/txtKotaOrder"
            app:layout_constraintTop_toBottomOf="@+id/txtKotaOrder" />

        <TextView
            android:id="@+id/txtTglOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembelian tiket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtStatusOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            app:layout_constraintStart_toStartOf="@+id/txtTglOrder"
            app:layout_constraintTop_toBottomOf="@+id/txtTglOrder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>